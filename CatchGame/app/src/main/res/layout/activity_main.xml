<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timeText"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="96dp"
        android:gravity="center"
        android:text="Time: 20"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginBottom="467dp"
        android:gravity="center"
        android:text="Score: 0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeText" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeText">


        <ImageView
            android:id="@+id/character"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/character"
            android:onClick="scoreClick" />

        <ImageView
            android:id="@+id/character1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="2"
            app:srcCompat="@drawable/character"
            android:onClick="scoreClick" />

        <ImageView
            android:id="@+id/character2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="3"
            app:srcCompat="@drawable/character"
            android:onClick="scoreClick" />

        <ImageView
            android:id="@+id/character3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/character"
            android:onClick="scoreClick" />

        <ImageView
            android:id="@+id/character4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@drawable/character"
            android:onClick="scoreClick" />

        <ImageView
            android:id="@+id/character5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="3"
            app:srcCompat="@drawable/character"
            android:onClick="scoreClick" />

        <ImageView
            android:id="@+id/character6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/character"
            android:onClick="scoreClick" />

        <ImageView
            android:id="@+id/character7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="2"
            app:srcCompat="@drawable/character"
            android:onClick="scoreClick" />

        <ImageView
            android:id="@+id/character8"
            android:layout_width="120dp"
            android:layout_height="118dp"
            android:layout_row="2"
            android:layout_column="3"
            app:srcCompat="@drawable/character"
            android:onClick="scoreClick" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>